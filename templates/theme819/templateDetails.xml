<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.7//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.7/template-install.dtd">
<extension version="1.7" type="template" client="site">
	<name>theme819</name>
	<creationDate>10 august 2011</creationDate>
	<author>Glenn</author>
	<authorEmail>info@template-help.com</authorEmail>
	<authorUrl>http://www.template-help.com</authorUrl>
	<copyright>Copyright  2003-2011 template-help.com. All Rights Reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.7.0</version>
	<description>this template for Joomla 1.7 is made by template-help.com</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>PIE.php</filename>
		<filename>PIE.htc</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>user0</position>
		<position>user1</position>
		<position>user2</position>
		<position>user3</position>
		<position>user4</position>
		<position>user5</position>
		<position>user6</position>
		<position>user7</position>
		<position>slogan</position>
		<position>top</position>
		<position>left</position>
		<position>right</position>
		<position>breadcrumbs</position>
		<position>banners</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_theme819.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_theme819.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field name="logo" type="media"
					label="TPL_theme819_FIELD_LOGO_LABEL" description="TPL_theme819_FIELD_LOGO_DESC" />




			</fieldset>
		</fields>
	</config>
</extension>
